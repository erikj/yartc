%form.form-signin{:action=>'/signup', :method=>"post"}
  %h2.form-signin-heading Sign up:
  %input.input-block-level{:name=>'username', :placeholder => "Username", :type => "text"}
  %input.input-block-level{:name=>'email', :placeholder => "Email address", :type => "text"}
  %input.input-block-level{:name=>'password', :placeholder => "Password", :type => "password"}
  %input.input-block-level{:name=>'confirm_password', :placeholder => "Confirm Password", :type => "password"}
  %label.checkbox
    %input{:name=>'remember-me', :type => "hidden",   :value => "false"}
    %input{:name=>'remember-me', :type => "checkbox", :value => "true"}
      Remember me
  %button.btn.btn-large.btn-primary{:type => "submit"} Sign Up

- if current_user
  %pre= current_user.inspect